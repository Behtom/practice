<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.practice.utils.tools.Converter" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewModel"
            type="com.example.practice.presentation.home.viewmodel.HomeVM" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/percentage60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/purple_200"
                android:padding="@dimen/margin_medium"
                app:layout_constraintBottom_toTopOf="@id/percentage60"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/DescriptionTitleLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.homeProduct.name}"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@id/ivAdd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="Nombre del producto"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivAdd"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="@dimen/margin_small"
                    app:tint="@color/white"
                    app:srcCompat="@drawable/ic_add_cart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textview.MaterialTextView
                style="@style/DescriptionLabel"
                android:id="@+id/tvPriceProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_medium"
                android:text='@{"Precio: " + Converter.amountToString(viewModel.homeProduct.price)}'
                app:layout_constraintTop_toBottomOf="@id/headerContainer"/>
            <com.google.android.material.textview.MaterialTextView
                style="@style/DescriptionLabel"
                android:id="@+id/tvCountProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_medium"
                android:text='@{"Existencia: "  + viewModel.homeProduct.count}'
                app:layout_constraintTop_toBottomOf="@id/tvPriceProduct"/>
            <com.google.android.material.textview.MaterialTextView
                style="@style/DescriptionLabel"
                android:id="@+id/tvProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_medium"
                android:text="@{viewModel.homeProduct.large_description}"
                app:layout_constraintTop_toBottomOf="@id/tvCountProduct"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>



</layout>
