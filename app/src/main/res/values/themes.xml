<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CartTitleLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CartCounterLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_label</item>
    </style>
    <style name="CartLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_label</item>
    </style>
    <style name="DescriptionTitleLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DescriptionLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_label</item>
    </style>
    <style name="TextTitleLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="CardTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_label</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="IconTint" parent="Theme.MyApplication">
        <item name="android:tint">@color/black</item>
    </style>
</resources>